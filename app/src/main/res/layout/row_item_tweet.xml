<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/row_item_tweet" android:paddingTop="8dp" android:paddingBottom="8dp"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivUserAvatar"
        android:layout_marginRight="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivUserAvatar"
        android:layout_toEndOf="@+id/ivUserAvatar" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserScreenName"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_alignBottom="@+id/tvUserName"
        android:layout_marginLeft="4dp"
        android:textSize="12sp"
        android:gravity="bottom"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/tvUserName"
        android:layout_toEndOf="@+id/tvUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvRelativeTimestamp"
        android:textStyle="italic"
        android:textSize="12sp"
        android:focusable="false"
        android:fontFamily="sans-serif-light"
        android:gravity="bottom"
        android:layout_alignTop="@+id/tvUserName"
        android:layout_alignBottom="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvText"
        android:focusable="false"
        android:clickable="false"
        android:textSize="13sp"
        android:textColor="@color/grey"
        android:textColorLink="@color/secondary_blue"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tvUserName"
        android:layout_toLeftOf="@+id/ivMedia"
        android:layout_toRightOf="@+id/ivUserAvatar"
        android:layout_toEndOf="@+id/ivUserAvatar" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/ivMedia"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/tvRelativeTimestamp"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>

</RelativeLayout>
